{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@social-networking/auth": ["libs/auth/src/index.ts"],
      "@social-networking/components": ["libs/components/src/index.ts"],
      "@social-networking/post-detail": ["libs/post-detail/src/index.ts"],
      "@social-networking/posts": ["libs/posts/src/index.ts"],
      "@social-networking/services": ["libs/services/src/index.ts"],
      "@social-networking/shared-ui": ["libs/shared/ui/src/index.ts"],
      "@social-networking/users": ["libs/users/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
